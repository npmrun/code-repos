{
    "compilerOptions": {
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "resolveJsonModule": true,
        "outDir": "../../dist/client",
        "declaration": true,
        "declarationDir": "../../dist/client-types",
        "jsx": "preserve",
        "target": "ESNext",
        "module": "ESNext",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["**/*"]
}
