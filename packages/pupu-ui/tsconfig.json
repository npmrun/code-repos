{
    "compilerOptions": {
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "resolveJsonModule": true,
        "jsx": "preserve",
        "target": "ESNext",
        "module": "ESNext",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@theme-chalk": ["src/theme-chalk/index.scss"],
            "@theme-chalk/*": ["src/theme-chalk/*"],
            "pupu-ui": ["src/index.ts"],
            "pupu-ui/dist/*": ["src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"],
    "references": [
        {
            "path": "./tsconfig.somebuild.json"
        }
    ]
}
